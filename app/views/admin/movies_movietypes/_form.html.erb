<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= label_tag yield(:text_head)%></h4>
      </div>
      <div class="modal-body">
      <%= form_for [:admin, @movies_movietype], remote: true do |f| %>
      <%= render "shared/error_messages", :target => @movies_movietype %>

        <div class="form-group">
          <%= f.label :movie_id %>
          <%= f.select :movie_id, @list_movie,
            {include_blank: "Choose one",selected: @movies_movietype.movie_id},
            {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :movietype_id %>
          <%= f.select :movietype_id, @list_movietype,
            {include_blank: "Choose one",selected: @movies_movietype.movietype_id},
            {class: "form-control"} %>
        </div>

        <div class="modal-footer">
          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
          <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      </div>
      <% end %>
      </div>
    </div>
  </div>
  <%= javascript_include_tag "index_admin" %>
  