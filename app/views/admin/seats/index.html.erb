<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to t("dashboard") %>
  </li>
  <li class="breadcrumb-item active"><%= t ".seat" %></li>
     <%= link_to t("add"),  new_admin_seat_path, class: "btn btn-primary" %>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <%= render "headerTable" %>
        </thead>
        <tbody>
          <% @seats.each_with_index do |item, index| %>
          <tr>
            <td><%= Index index %></td>
            <td><%= item.num_of_row %></td>
            <td><%= item.num_of_collum %></td>
            <td><%= item.seat_type %></td>
            <td><%= item.cinemaroom_id %></td>
            <td><%= item.status %></td>
            <td>
              <%= link_to t("edit"), edit_admin_seat_path(item),{class:"btn btn-info","data-toggle":"modal", "data-target":"#myModal"} %>
              <!-- <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button> -->
              <%= link_to t("delete"), admin_seats_path(item), class:"btn btn-danger", method: :delete,data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


