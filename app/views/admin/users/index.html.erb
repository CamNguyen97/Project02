<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to t("dashboard") %>
  </li>
  <li class="breadcrumb-item active"><%= t ".user" %></li>
   <%= button_tag t("add"), class: "btn btn-primary btn-add btn-users" %>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <%= render "headerTable" %>
        </thead>
        <tbody>
          <% @users.each_with_index do |item, index| %>
          <tr>
            <td><%= Index index %></td>
            <td><%= item.name %></td>
            <td><%= item.address %></td>
            <td><%= item.phone %></td>
            <td><%= item.email %></td>
            <td><%= item.status %></td>
            <td><%= item.role %></td>
            <td>
              <%= button_tag t("update"), data: item.id,
                class: "btn btn-info btn-add btn-users-update" %>
              <%= button_tag t("delete"), data: item.id,
                class: "btn btn-danger btn-add btn-users-delete" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


