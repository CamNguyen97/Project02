<%= form_for resource, as: resource_name, url: registration_path(resource_name), html:{class: "modal1-content animate"} do |f| %>
  <h1 class="title-h1">Sign Up</h1>
  <%= devise_error_messages! %>
  <%= f.label :email, class: "txt" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text" %>
  <%= f.label :password, class: "txt" %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", class: "input-text" %>
  <%= f.label :password_confirmation, class: "txt" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-text" %>
  <div class="clearfix">
    <%= f.submit "signup", class: "button-signup" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
